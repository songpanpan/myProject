<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon_bookshelf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/icon_info_bookshelf"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/top_bar_l_button"
        android:layout_width="wrap_content"
        android:layout_height="18.dp"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/back"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/top_bar_close_button"
        android:layout_width="wrap_content"
        android:layout_height="18.dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/top_bar_l_button"
        android:clickable="true"
        android:paddingLeft="15dp"
        android:paddingRight="40dp"
        android:src="@drawable/close"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_top_sign"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="74dp"
        android:clickable="true"
        android:src="@drawable/sign_icon"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_red_dot"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_alignBottom="@+id/iv_top_sign"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="70dp"
        android:src="@drawable/red_spot"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/top_bar_r_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:src="@drawable/search"
        android:visibility="gone" />

    <TextView
        android:id="@+id/top_bar_title"
        style="@style/style_default_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="@dimen/top_bar_title_left_margin"
        android:layout_marginRight="@dimen/top_bar_title_right_margin"
        android:text="标题" />
</RelativeLayout>