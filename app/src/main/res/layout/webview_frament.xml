<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">

    <com.yueyou.adreader.activity.refreshload.RefreshLoadLayout
        android:id="@+id/rll_sj"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.yueyou.adreader.view.webview.CustomWebView
            android:id="@+id/webview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none" />
    </com.yueyou.adreader.activity.refreshload.RefreshLoadLayout>

    <LinearLayout
        android:id="@+id/ll_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#ffffffff"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/nonet" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxLines="3"
                android:padding="10dp"
                android:text="网络不好，请检查网络设置"
                android:textColor="#aa888888"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_reload_fram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重新加载"
                android:textColor="#FF2A90D7"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"></TextView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>