<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="297dp"
    android:layout_height="125dp"
    android:background="@drawable/dlg_bg_circle">
    <TextView
        android:id="@+id/toast"
        android:layout_width="match_parent"
        android:layout_height="78.dp"
        android:textSize="15sp"
        android:textColor="#ff333333"
        android:maxLines="5"
        android:gravity="center"
        android:lineSpacingMultiplier="1.3"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffcccccc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47.dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#ff0066ff"
            android:textSize="18sp"
            android:text="@string/dlg_cancel"
            android:gravity="center"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ffcccccc"/>
        <TextView
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#ffef1818"
            android:textSize="18sp"
            android:text="@string/dlg_confirm"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>