<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/bg_gray_rectangle">

        <ImageView
            android:id="@+id/header_icon_left"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignBottom="@id/gridview_header_title"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@id/gridview_header_title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/header_icon_left" />

        <ImageView
            android:id="@+id/header_icon_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginVertical="10dp"
            android:src="@drawable/header_icon_right" />

        <TextView
            android:id="@+id/gridview_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@id/header_icon_right"
            android:layout_toRightOf="@id/header_icon_left"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingVertical="5dp"
            android:singleLine="true"
            android:text="我是逍遥兵王，誓死守卫好兄弟的123435567567689fvhfghfghfhsdfsf姐姐"
            android:textColor="#FF999999"
            android:textSize="13sp" />
    </RelativeLayout>

</RelativeLayout>