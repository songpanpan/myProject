<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#fe231e1a"
        android:orientation="vertical"
        android:clickable="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            >
            <ImageView
                android:id="@+id/brightness_small_img"
                android:layout_alignParentLeft="true"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:background="@drawable/brightness_small"/>
            <ImageView
                android:id="@+id/brightness_big_img"
                android:layout_toLeftOf="@id/system_brightness"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:background="@drawable/brightness_big"/>
            <TextView
                android:id="@+id/system_brightness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="5dp"
                android:text="系统"
                android:textSize="12sp"
                android:textColor="@color/flip_mode_selected_text_color"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:background="@drawable/shape_flip"/>
            <SeekBar
                android:id="@+id/brightness_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/brightness_big_img"
                android:layout_toRightOf="@id/brightness_small_img"
                android:max="255"
                android:progress="50"
                android:maxHeight="2dp"
                android:minHeight="2dp"
                android:paddingBottom="3dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="3dp"
                android:progressDrawable="@drawable/layer_progress"
                android:thumb="@drawable/shape_circle" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>