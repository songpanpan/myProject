<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/native_ad_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="horizontal">
    <RelativeLayout
        android:id="@+id/ad_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.8"
        android:padding="4dp">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="74.66dp"
            android:layout_height="37.33dp"
            android:layout_marginLeft="10dp"
            android:scaleType="fitCenter"
            android:background="@color/tt_transparent"/>
        <ImageView
            android:id="@+id/img_cp"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginLeft="3dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/tt_ad_logo_small" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ad_middle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.2"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/text_title"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="标题"
            android:textSize="13sp"
            android:textColor="#FF333333" />
        <TextView
            android:id="@+id/text_desc"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="#FF666666"
            android:alpha="0.76"
            android:textSize="10sp"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/ad_right"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="4.0">
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/read_ad_close"/>
        <Button
            android:id="@+id/button"
            android:layout_width="62dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/img_close"
            android:background="@drawable/bg_red_rectangle"
            android:text="查看详情"
            android:textColor="#FFDC5959"
            android:textSize="12sp"
            />
    </RelativeLayout>
</LinearLayout>